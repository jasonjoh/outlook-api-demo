@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>Outlook API Demo App</h1>
    <p class="lead">This sample app uses the Outlook API endpoint (<code>https://outlook.office.com</code>) to make API calls for Outlook data.</p>
    @if (Request.IsAuthenticated)
    {
        <p>Welcome, @(ViewBag.UserName)!</p>
    }
    else
    {
        <p><a href="@Url.Action("SignIn", "Home", null, Request.Url.Scheme)" class="btn btn-primary btn-lg">Click here to login</a></p>
    }
</div>